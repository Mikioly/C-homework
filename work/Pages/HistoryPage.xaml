            <StackPanel Background="Aquamarine" Grid.Column="1" Grid.Row="1">
                <StackPanel.Resources>
                    <Style x:Key="统一TextBlock高度" TargetType="{x:Type TextBlock}">
                        <Setter Property="Height" Value="17"/>
                        <!-- 设置统一的高度 -->
                        <!-- 可以设置其他统一的属性，如字体大小、颜色等 -->
