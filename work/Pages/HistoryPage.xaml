                <TextBlock Text="{Binding Result[14]}" TextAlignment="Center" Style="{StaticResource 统一TextBlock高度}"/>
                <TextBlock Text="{Binding Result[16]}" TextAlignment="Center" Style="{StaticResource 统一TextBlock高度}"/>
                <TextBlock Text="{Binding Result[18]}" TextAlignment="Center" Style="{StaticResource 统一TextBlock高度}"/>
                <TextBlock Text="{Binding Result[20]}" TextAlignment="Center" Style="{StaticResource 统一TextBlock高度}"/>
                <TextBlock Text="{Binding Result[22]}" TextAlignment="Center" Style="{StaticResource 统一TextBlock高度}"/>
